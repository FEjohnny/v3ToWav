{
    "include": [
        "src/**/*/*.ts",
        "src/**/*.ts",
        "src/*.ts",
        "test/*.*.ts",
        "test/*/*.*.ts",
        "test/index.test.js"
    ],
    "output": "./dist/",
    "paths": {
        "src/*": ["src/*", "src/*/*"]
    },
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false
    }
}
